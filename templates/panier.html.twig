{% extends 'base.html.twig' %}

{% block body %}
<h1 class="text-center text-3xl md:text-4xl lg:text-5xl font-extrabold text-orange-600 mt-12 shadow-md">
    Votre Panier
    <br><br>
</h1>

<div class="container mx-auto mt-5">
    <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-4 gap-4">
        {% for produit in produits %}
            <div class="flex flex-col max-w-sm rounded overflow-hidden shadow-lg bg-gray-200">
                <div class="relative w-full h-64">
                    <img class="absolute inset-0 w-full h-full object-cover" 
                        src="{{ asset('images/Produits/' ~ produit.nomImage ~ '.jpg') }}" 
                        alt="{{ produit.nomProd }}">
                </div>
                <div class="flex-1 px-6 py-4 flex flex-col">
                    <div class="text-2xl text-black-700 font-semibold">
                        {{ produit.nomProd }}
                    </div>
                    <div class="text-xl text-black-700 font-semibold mt-1">
                        {{ produit.prixProd }} €
                    </div>
                    <div class="text-lg text-gray-600 mt-1">
                        Quantité : {{ produit.quantite }}
                    </div>
                    <div class="flex-grow"></div>
                    <div class="mt-4 flex justify-between items-center">
                        <a href="{{ path('panier_retirer', { 'id': produit.id }) }}" class="bg-red-500 text-white font-semibold py-2 px-4 rounded hover:bg-red-600 focus:outline-none focus:ring-2 focus:ring-red-400 focus:ring-opacity-50">
                            Retirer
                        </a>
                    </div>
                </div>
            </div>
        {% else %}
            <p class="text-center text-gray-500 col-span-3">Votre panier est vide.</p>
        {% endfor %}
    </div>

    {% if produits is not empty %}
        <div class="mt-8 text-right">
            <h2 class="text-2xl font-bold text-gray-800">
                Total : {{ total }} €
            </h2>
            <button class="bg-green-500 text-white font-semibold py-3 px-6 rounded hover:bg-green-600 focus:outline-none focus:ring-2 focus:ring-green-400 focus:ring-opacity-50 mt-4">
                Passer la commande
            </button>
        </div>
    {% endif %}
</div>
{% endblock %}
