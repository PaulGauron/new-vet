{% extends 'base.html.twig' %}

{% block body %}
<h1 class="text-center text-3xl md:text-4xl lg:text-5xl font-extrabold text-orange-600 mt-12 shadow-mds">
    Nos T-shirts & Tops
    </br>
    </br>
</h1>
<div class="container mx-auto mt-5">
    <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-4 gap-4">
        {% for top in tops %}
            <div class="flex flex-col max-w-sm rounded overflow-hidden shadow-lg bg-gray-200">
                <div class="relative w-full h-80">
                    {% for imagesProduit in top.getImagesProduits() %}
                        <img class="absolute inset-0 w-full h-full object-cover" src="{{ asset('images/Produits/' ~ imagesProduit.getImage().getNomImage() ~ '.jpg') }}" alt="{{ top.getNomProd() }}">
                    {% endfor %}
                </div>
                <div class="flex-1 px-6 py-4 flex flex-col">
                    <div class="text-2xl text-black-700 font-semibold">
                        {{ top.getNomProd() }}
                    </div>
                    <div class="text-xl text-black-700 font-semibold mt-1">
                        {{ top.getPrixProd() }} €
                    </div>
                    {% if top.getStock() <= 3 %}
                        <p class="text-red-700 text-xl mt-2">Stock épuisé</p>
                    {% elseif top.getStock() <= 5 %}
                        <p class="text-red-700 text-xl mt-2">Stock bientôt épuisé</p>
                    {% endif %}
                    <div class="mt-auto">
                        {% if top.getStock() > 3 %}
                            {% if app.session.get('utilisateur') %}
                                <form action="{{ path('panier_ajouter', {'id': top.getId()}) }}" method="post">
                                    <button type="submit" class="bg-blue-500 text-white font-semibold py-2 px-4 rounded hover:bg-blue-600 focus:outline-none focus:ring-2 focus:ring-blue-400 focus:ring-opacity-50 mt-4 w-full">
                                        AJOUTER AU PANIER
                                    </button>
                                </form>
                            {% else %}
                                <a href="{{ path('connexion') }}" class="bg-blue-500 text-white font-semibold py-2 px-4 rounded hover:bg-blue-600 focus:outline-none focus:ring-2 focus:ring-blue-400 focus:ring-opacity-50 mt-4 w-full text-center block">
                                    CONNECTEZ-VOUS</br>POUR AJOUTER AU PANIER
                                </a>
                            {% endif %}
                        {% else %}
                            <button class="bg-gray-400 text-gray-700 font-semibold py-2 px-4 rounded cursor-not-allowed opacity-50 mt-4 w-full" disabled>
                                STOCK ÉPUISÉ
                            </button>
                        {% endif %}
                    </div>
                </div>
                <div class="px-6 pt-4 pb-2 bg-gray-100 mt-auto">
                    <span class="inline-block bg-orange-500 rounded-full px-3 py-1 text-sm font-semibold text-white mr-2 mb-2">#Mode</span>
                    <span class="inline-block bg-orange-500 rounded-full px-3 py-1 text-sm font-semibold text-white mr-2 mb-2">#Tops</span>
                </div>
            </div>
        {% else %}
            <p class="text-center text-gray-500">Aucun top disponible pour le moment.</p>
        {% endfor %}
    </div>
</div>
{% endblock %}
