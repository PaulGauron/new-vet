{% extends 'base.html.twig' %}

{% block body %}
<h1 class="text-center text-3xl md:text-4xl lg:text-5xl font-bold text-orange-700 mt-12">
    Nos Chaussures
    </br>
    </br>
</h1>
<div class="container mx-auto mt-5">
    <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-4">
        {% for chaussure in chaussures %}
            <div class="flex flex-col max-w-sm rounded overflow-hidden shadow-lg bg-white">
                <div class="relative w-full h-80">
                    {% for imagesProduit in chaussure.getImagesProduits() %}
                        <img class="absolute inset-0 w-full h-full object-cover" src="{{ asset('images/chaussures/' ~ imagesProduit.getImage().getNomImage() ~ '.jpg') }}" alt="{{ chaussure.getNomProd() }}">
                    {% endfor %}
                </div>
                <div class="flex-1 px-6 py-4">
                    <div class="text-2xl text-black-700 font-semibold">
                        {{ chaussure.getNomProd() }}
                    </div>
                    <div class="text-xl text-black-700 font-semibold mt-1">
                        {{ chaussure.getPrixProd() }} €
                    </div>
                    {% if chaussure.getStock() <= 3 %}
                        <p class="text-red-700 text-xl mt-2">Stock épuisé</p>
                    {% elseif chaussure.getStock() <= 5 %}
                        <p class="text-red-700 text-xl mt-2">Stock bientôt épuisé</p>
                    {% endif %}
                </div>
                <div class="px-6 pt-4 pb-2 bg-gray-100 mt-auto">
                    <span class="inline-block bg-orange-500 rounded-full px-3 py-1 text-sm font-semibold text-white mr-2 mb-2">#Mode</span>
                    <span class="inline-block bg-orange-500 rounded-full px-3 py-1 text-sm font-semibold text-white mr-2 mb-2">#Chaussures</span>
                </div>
            </div>
        {% else %}
            <p class="text-center text-gray-500">Aucun chaussure disponible pour le moment.</p>
        {% endfor %}
    </div>
</div>
{% endblock %}
