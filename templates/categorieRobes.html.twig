{# templates/robe/list.html.twig #}
{# exemple d'affichage des robes de la bdd dans une carte, faire de même avec toutes les catégories #}
{% extends 'base.html.twig' %}

{% block body %}
<h1 class="text-center text-3xl md:text-4xl lg:text-5xl font-bold text-orange-500 mt-12">
    Nos Robes
</h1>
<div class="container mx-auto mt-5">
    <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-4">
        {% for robe in robes %}
            <div class="max-w-sm rounded overflow-hidden shadow-lg bg-white">
                <img class="w-full" src="{{ asset('images/' ~ robe.nom_image) }}" alt="{{ robe.nom_prod }}">
                <div class="px-6 py-4">
                    <div class="font-bold text-xl mb-2">{{ robe.nom_prod }}</div>
                    <p class="text-gray-700 text-base">
                        {{ robe.description_prod }}
                    </p>
                </div>
                <div class="px-6 pt-4 pb-2">
                    <span class="inline-block bg-orange-500 rounded-full px-3 py-1 text-sm font-semibold text-white mr-2 mb-2">#Mode</span>
                    <span class="inline-block bg-orange-500 rounded-full px-3 py-1 text-sm font-semibold text-white mr-2 mb-2">#Robes</span>
                </div>
            </div>
        {% endfor %}
    </div>
</div>
{% endblock %}
